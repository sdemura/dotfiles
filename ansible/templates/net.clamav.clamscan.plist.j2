<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>KeepAlive</key>
    <false/>
    <key>Label</key>
    <string>net.clamav.clamscan</string>
    <key>LowPriorityIO</key>
    <true/>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/clamscan</string>
        <string>-i</string>
        <string>-o</string>
        <string>--log=/var/log/clamav/clamscan.log</string>
        <string>--include=^/Users/</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>StartInterval</key>
    <integer>3600</integer>
    <key>UserName</key>
    <string>{{ ansible_user }}</string>
</dict>
</plist>
